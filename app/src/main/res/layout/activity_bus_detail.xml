<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".BusDetail">

        <CheckBox
            android:id="@+id/cbAC"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="15dp"
            android:text="AC"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbNetflix" />

        <CheckBox
            android:id="@+id/cbElectricalPlug"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="81dp"
            android:layout_marginTop="15dp"
            android:text="Electric plug"
            app:layout_constraintStart_toEndOf="@+id/cbNetflix"
            app:layout_constraintTop_toBottomOf="@+id/cbLiveTracking" />

        <TextView
            android:id="@+id/tvBusName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="BusName"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgBus"
            android:layout_width="254dp"
            android:layout_height="161dp"
            android:layout_marginStart="78dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="79dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBusName"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />

        <ImageView
            android:id="@+id/imgLeft"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@+id/imgBus"
            app:layout_constraintTop_toBottomOf="@+id/tvBusName"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/imgRight"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="90dp"
            app:layout_constraintStart_toEndOf="@+id/imgBus"
            app:layout_constraintTop_toBottomOf="@+id/tvBusName"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Number of Seats"
            android:textColor="#404040"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvBusDetail" />

        <TextView
            android:id="@+id/tvNumberOfSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:text="TextView"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/sbNumberOfSeats"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Services"
            android:textColor="#404040"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sbNumberOfSeats" />

        <CheckBox
            android:id="@+id/cbFood"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="15dp"
            android:text="Food"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <CheckBox
            android:id="@+id/cbNetflix"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="15dp"
            android:text="Netflix"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbFood" />

        <CheckBox
            android:id="@+id/cbLiveTracking"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="89dp"
            android:layout_marginTop="15dp"
            android:text="Live tracking"
            app:layout_constraintStart_toEndOf="@+id/cbFood"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <CheckBox
            android:id="@+id/cbSleeper"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_marginStart="103dp"
            android:layout_marginTop="15dp"
            android:text="Sleeper"
            app:layout_constraintStart_toEndOf="@+id/cbAC"
            app:layout_constraintTop_toBottomOf="@+id/cbElectricalPlug" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Total price:"
            android:textColor="#404040"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cbAC" />

        <TextView
            android:id="@+id/tvFinalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:text="finalPrice"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/cbAC" />

        <Button
            android:id="@+id/btnBookTicket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:text="                       Book Ticket                     "
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <Button
            android:id="@+id/btnAddAmount1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="30dp"
            android:text="                       Add amount                     "
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnBookTicket"
            app:layout_constraintVertical_bias="0.49" />

        <TextView
            android:id="@+id/tvBusDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="BusDetail"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBus" />

        <SeekBar
            android:id="@+id/sbNumberOfSeats"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="189dp"
            android:layout_height="27dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:max="5"
            android:progress="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView18" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>